        margin-top: 5px;
    }
</style>
<script>
    function initMap() {
        var myLatlng = { lat: -25.363, lng: 131.044 };
        curposdiv = document.getElementById('curpos');
        var map = new google.maps.Map(
            document.getElementById('map'), { zoom: 4, center: myLatlng });

        // Create the initial InfoWindow.
        var infoWindow = new google.maps.InfoWindow(
            { content: 'Click the map to get Lat/Lng!', position: myLatlng });
        infoWindow.open(map);

        // Configure the click listener.
        map.addListener('click', function (mapsMouseEvent) {
            // Close the current InfoWindow.
            infoWindow.close();

            // Create a new InfoWindow.
            infoWindow = new google.maps.InfoWindow({ position: mapsMouseEvent.latLng });
            infoWindow.setContent(mapsMouseEvent.latLng.toString());
            infoWindow.open(map);
            var tny = mapsMouseEvent.latLng.toString();// map.getCenter().toUrlValue();
            document.getElementById('tny2').innerHTML = tny;
            var omr = map.getZoom();
            document.getElementById('tny3').innerHTML = omr;
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2pDmf7CKcQSZuRDLUmTMouoJD32sCVYs&callback=initMap">
</script>
<title>Getting LatLng from a Click Event</title>
